{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
  "outDir": "./dist",
  "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": ["index.ts", "middleware/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}